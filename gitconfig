[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = vim
  quotepath = false
  excludesfile = ~/code/personal/dotfiles/global-gitignore
[branch]
  autosetuprebase = always
[push]
  default = current
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
  prompt = false
[merge]
  tool = opendiff
  conflictstyle = diff3
[alias]
	autofix = "!f() { git commit --fixup $(git log -n 1 --pretty=format:%H -- \"$GIT_PREFIX$1\") \"$GIT_PREFIX$1\"; }; f"<Paste>
  stash-branch = "!f() { git checkout -b stash/"$1" && git add --all . && git commit -m WIP && git checkout -; }; f"

  s = status
  co = checkout
  cp = cherry-pick
  c = commit -av
  cm = commit -m
  br = branch
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  l = log
  a = commit -v --amend
  nb = checkout -b
  wipe = reset --hard
  abort = rebase --abort
  cont = rebase --continue
  yolo = push --force
  pushf = push --force-with-lease
  pushfnv = push --force-with-lease --no-verify
[diff]
  algorithm = patience
	compactionHeuristic = true
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[rebase]
  autosquash = true
[interactive]
  # diffFilter = diff-highlight
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

